!!!5
%html.layout
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta(content="#{data.page.description}" name="description")
    %meta(content="Mokkapan Phongphit" property="og:site_name")
    %meta(content="images/og-geigenunterricht.png" property="og:image")
    %meta(content="#{data.page.description}" property="og:description")
    - title = data.page.title
    %title= (title.blank? ? '' : title + ' - ') + 'Mokkapan Phongphit'
    = stylesheet_link_tag "mokkapan"
    = javascript_include_tag "all"
    %script(src="//use.typekit.net/inl1jab.js")
    %script try{Typekit.load();}catch(e){}
  %body.layout--container(class=page_classes)
    %header.layout--header
      = link_to nil, '.', class: 'layout--logo'
      = link_to nil, '.', class: 'layout--mokkapan'
      %nav.navigation
        - %w(ueber-mich kuenstler termine geigenunterricht kontakt).each do |page|
          = link_to page, "#{page}.html", class: "navigation--item -#{page}#{' -selected' if request.path =~ /#{page}/}"
    %article.layout--content
      = yield

