!!!5
%html
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %title= data.page.title || "Mokkapan"
    = stylesheet_link_tag "mokkapan"
    = javascript_include_tag "all"
    %script(src="//use.typekit.net/inl1jab.js")
    %script try{Typekit.load();}catch(e){}
  %body(class=page_classes)
    %header
      = link_to nil, '/', id: 'logo'
      = link_to nil, '/', id: 'mokkapan'
      %nav
        - %w(ueber-mich kuenstler termine geigenunterricht kontakt).each do |page|
          = link_to page, "#{page}.html", id: page, class: request.path =~ /#{page}/ ? 'selected' : nil
    %article
      = yield
